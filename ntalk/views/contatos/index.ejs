<% include ../header %>
<header>
  <h2>Ntalk - Agenda de contatos</h2>
</header>

<section>
  <!-- Formulário de novo contato -->
  <form action="/contato" method="post">
    <input type="text" name="contato[nome]" placeholder="Nome">
    <input type="text" name="contato[email]" placeholder="E-mail">
    <button type="submit">Cadastrar</button>
  </form>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <% contatos.forEach(function(contato) { %>
          <tr>
            <td><%- contato.nome %></td>
            <td><%- contato.email %></td>
            <td>
              <span id="notify_<%- contato.email %>" class="label">Offline</span></td>
            <td>
              <a href="/contato/<%- contato._id %>" class="btn btn-info">Detalhes</a>
              <a href="/chat/<%- contato.email %>" id="chat_<%- contato.email %>" class="btn btn-primary">Conversar</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</section>
<% include notify_script %>
<% include ../exit %>
<% include ../footer %>
